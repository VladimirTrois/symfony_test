{% extends 'base.html.twig' %}

{% block title %}Boire {{ biere.nom }} {% endblock %}

{% block body %}
    {{ form_start(form) }}
    <h1> Ajouter
        <a class="text-dark" href="{{ path('biere.info', {id: biere.id, slug: biere.slug})}}">
            {{ biere.nom }}
        </a>
    </h1>
    <div class="form-group">
        <div class="col-md-4"> {{ form_row(form.note) }} </div>
    </div>
    <div class="form-group">
        <div class="col-md-4">
            {{ form_row(form.revendeur) }}
            <a role="button" href="{{ path('revendeur.create') }}" class="btn btn-secondary">Ajouter un revendeur</a>
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-4"> {{ form_row(form.service) }} </div>
    </div>
    <button class="btn btn-dark" type="submit">Boire</button>
    {{ form_end(form) }}
{% endblock %}