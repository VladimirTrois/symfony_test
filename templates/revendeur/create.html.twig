{% extends 'base.html.twig' %}

{% block title %}Nouveau Revendeur{% endblock %}

{% block body %}
    <div class="h1">Ajouter un nouveau revendeur</div>
    {{ form_start(form) }}
    <div class="row">
        <div class="col-md-4"> {{ form_row(form.nom) }} </div>
        <div class="col-md-4"> {{ form_row(form.type) }} </div>
    </div>
    <div class="row">
        <div class="col-md-4"> {{ form_row(form.numero_rue) }} </div>
        <div class="col-md-4"> {{ form_row(form.rue) }} </div>
    </div>
    <div class="row">
        <div class="col-md-4"> {{ form_row(form.code_postale) }} </div>
        <div class="col-md-4"> {{ form_row(form.ville) }} </div>
    </div>
    <div class="row">
        <div class="col-md-4"> {{ form_row(form.pays) }} </div>
    </div>
    <button class="btn btn-dark" type="submit">Valider</button>
    {{ form_end(form) }}
{% endblock %}